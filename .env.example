APP__VERSION=1.0.0
APP__ENABLE_LEGACY_ROUTES=false

# Security
# Leave empty in local dev unless you explicitly test auth.
SECURITY__API_TOKEN=
# SECURITY__BASIC_USER=admin
# SECURITY__BASIC_PASS=strong-password
SECURITY__REQUIRE_AUTH_ON_QUERIES=false
SECURITY__MAX_UPLOAD_MB=15
# JSON map: {"email@domain":"battalion|Kfir|Mahatz|Sufa"}
# Required when SECURITY__REQUIRE_AUTH_ON_QUERIES=true
SECURITY__AUTHORIZED_USERS='{"you@example.com":"battalion"}'

# Storage
# Local development: sqlite
# Cloud Run stage: firestore
STORAGE__BACKEND=sqlite
STORAGE__FIRESTORE_PROJECT_ID=
STORAGE__FIRESTORE_DATABASE=(default)
STORAGE__FIRESTORE_COLLECTION_PREFIX=spearhead_v1

# Google integration
GOOGLE__ENABLED=false
GOOGLE__SERVICE_ACCOUNT_FILE=./credentials.json
GOOGLE__API_KEY=
GOOGLE__OAUTH_CLIENT_ID=
GOOGLE__OAUTH_CLIENT_SECRET=
GOOGLE__OAUTH_REDIRECT_URI=http://127.0.0.1:8000/auth/google/callback
GOOGLE__FILE_IDS__PLATOON_LOADOUT=
GOOGLE__FILE_IDS__BATTALION_SUMMARY=
# JSON map by company alias
GOOGLE__FILE_IDS__FORM_RESPONSES='{"כפיר":"<SHEET_ID>","מחץ":"<SHEET_ID>","סופה":"<SHEET_ID>"}'
GOOGLE__CACHE_DIR=./data/sync_cache
GOOGLE__MAX_RETRIES=3
GOOGLE__BACKOFF_SECONDS=1.0

# AI
# Default low-cost mode: keep disabled (deterministic local summary, no external cost)
AI__ENABLED=false
AI__PROVIDER=offline
AI__BASE_URL=
AI__API_KEY=
AI__MODEL=gpt-4o-mini
AI__MAX_TOKENS=1200
AI__CACHE_TTL_MINUTES=60
AI__TEMPERATURE=0.2

# Paths
PATHS__DB_PATH=./data/ironview.db
PATHS__INPUT_DIR=./data/input
PATHS__OUTPUT_DIR=./reports
OPERATIONAL__STANDARDS_PATH=./config/operational_standards.yaml

# Frontend (optional)
# If empty, frontend uses backend route /auth/google/start
VITE_GOOGLE_OAUTH_URL=
VITE_ALLOW_GUEST_LOGIN=false
