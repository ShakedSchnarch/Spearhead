APP__VERSION=1.0.0
APP__ENABLE_LEGACY_ROUTES=false

# API security (optional). Use either token or basic auth.
SECURITY__API_TOKEN=change-me-token
# SECURITY__BASIC_USER=admin
# SECURITY__BASIC_PASS=strong-password
SECURITY__REQUIRE_AUTH_ON_QUERIES=false
SECURITY__MAX_UPLOAD_MB=15

# Storage backend
STORAGE__BACKEND=sqlite
STORAGE__FIRESTORE_PROJECT_ID=
STORAGE__FIRESTORE_DATABASE=(default)
STORAGE__FIRESTORE_COLLECTION_PREFIX=spearhead_v1

# Operational dashboard mapping (optional JSON values)
# OPERATIONAL__SECTIONS='["Armament","Logistics","Communications"]'
# OPERATIONAL__FAMILY_TO_SECTION='{"ammo":"Armament","zivud":"Logistics","issues":"Logistics","parsim":"Logistics","means":"Communications"}'

# Google Sheets sync (optional). Enable and provide credentials/file ids.
GOOGLE__ENABLED=false
GOOGLE__SERVICE_ACCOUNT_FILE=/app/config/service_account.json
GOOGLE__API_KEY=
GOOGLE__OAUTH_CLIENT_ID=
GOOGLE__OAUTH_CLIENT_SECRET=
GOOGLE__OAUTH_REDIRECT_URI=http://127.0.0.1:8000/auth/google/callback
GOOGLE__FILE_IDS__PLATOON_LOADOUT=
GOOGLE__FILE_IDS__BATTALION_SUMMARY=
GOOGLE__FILE_IDS__FORM_RESPONSES=
GOOGLE__CACHE_DIR=./data/sync_cache
GOOGLE__MAX_RETRIES=3
GOOGLE__BACKOFF_SECONDS=1.0

# AI provider (optional). Defaults to offline simulated mode.
AI__ENABLED=false
AI__PROVIDER=offline   # offline|http
AI__BASE_URL=
AI__API_KEY=
AI__MODEL=gpt-4o-mini
AI__MAX_TOKENS=256
AI__CACHE_TTL_MINUTES=60
AI__TEMPERATURE=0.2

# Paths (override if needed)
PATHS__DB_PATH=./data/spearhead.db
PATHS__INPUT_DIR=./data/input
PATHS__OUTPUT_DIR=./reports
